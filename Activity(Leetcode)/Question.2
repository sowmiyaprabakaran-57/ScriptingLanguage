# Create a simple window with a label and a button
package require Tk

# Create the main window
set mainWindow [tk::frame .]

# Create a label with initial text
label $mainWindow.label -text "Click the button!"
pack $mainWindow.label

# Define the button callback function
proc changeText {} {
    global mainWindow
    $mainWindow.label configure -text "Button clicked!"
}

# Create a button that calls the changeText procedure when clicked
button $mainWindow.button -text "Click Me" -command changeText
pack $mainWindow.button

# Start the Tk event loop
tk::MainLoop
