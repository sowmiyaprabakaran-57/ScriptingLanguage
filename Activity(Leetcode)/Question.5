# Create a menu bar with options
package require Tk

# Create the main window
set mainWindow [tk::frame .]

# Create a menu bar
menu .menubar
.menubar add command -label "Open" -command {puts "Open clicked"}
.menubar add command -label "Save" -command {puts "Save clicked"}

# Add the menu bar to the window
.config -menu .menubar

# Start the Tk event loop
tk::MainLoop
