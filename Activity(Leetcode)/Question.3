# Create a window with an input field
package require Tk

# Create the main window
set mainWindow [tk::frame .]

# Create a label
label $mainWindow.label -text "Enter your name:"
pack $mainWindow.label

# Create an entry widget for user input
entry $mainWindow.entry
pack $mainWindow.entry

# Define a callback to retrieve the entered text
proc showInput {} {
    global mainWindow
    set inputText [$mainWindow.entry get]
    puts "You entered: $inputText"
}

# Create a button to show the input text
button $mainWindow.button -text "Submit" -command showInput
pack $mainWindow.button

# Start the Tk event loop
tk::MainLoop
